<!--pages/edit-comment/edit-comment.wxml-->
<image class='movie-img' src="{{movie.img}}"></image>

<view class='movie-detail-block'>
  <view class='movie-name'>{{movie.name}}</view>
  <view class='movie-detail'>{{movie.detail}}</view>

  <view class='add-comment' wx:if='{{operation==0}}'>
    <textarea class="input-comment" placeholder="请输入你的影评内容..." placeholder-class = 'input-placeholder' auto-focus/>
  </view>

  <view class='add-voice' wx:if='{{operation==1}}'>
    <image class='voice-img' src='/images/microphone.png'></image>
    <view class='voice-word'>录音</view>
  </view>
</view>

<button class = 'havebtn'>完成</button>