<!--pages/list-comment/list-comment.wxml-->

<view class='the-movie-comment'>
  <view class='comment-block' wx:for="{{comment}}">
    <view class='user-comment'>
      <view class='about-user'>
        <image class='user-head' src='{{item.userimg}}'></image>
        <view class='user-name'>{{item.username}}</view>
      </view>
      <view class='user-commentdetail'>{{item.commentdetail}}</view>
    </view>
  </view>
</view>

<view class='connect-block'>
  <view class='connect-item'>
    <text class='mini-text'>回到首页</text>
  </view>
</view>
